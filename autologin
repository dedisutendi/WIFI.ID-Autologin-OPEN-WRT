#!/bin/sh
err='6';laper='\e[38;5;82m';lempar='\033[0m';lemper='\e[38;5;226m';printf "${laper}\n";printf "  CARA PENGGUNAAN\n";printf "  ===============\n";printf "- Router wajib OpenWRT\n";printf "- Sambungkan dengan internet\n";printf "----------------------------\n\n";printf "${lemper}Check Internet connection...\n";x=`ping -c1 8.8.8.8 2>&1|grep 100%`;if [ ! "$x" = "" ];then printf "${err}...[Error] No Internet connection! Exiting...";printf "${lempar}\n";exit;fi;printf "${lempar}...[pass] Internet connection works\n";printf "Process instalation, please wait...\n\n";if ! hash openssl 2>/dev/null;then opkg update&&opkg install openssl-util libustream-openssl;fi;wget --no-check-certificate 'https://raw.githubusercontent.com/dedisutendi/-WIFI.ID-Autologin-OPEN-WRT/master/auto_login' -O auto_login 2>/dev/null;wait 30;chmod +x auto_login;printf "${lemper}";sh auto_login install;sleep 10;printf "${lempar}";/bin/rm -f "${0}"
#end
